doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        //- link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" ,crossorigin="anonymous")
        link(rel="stylesheet", href="/css/app.css")
        link(rel="stylesheet", href="/css/normalize.css")
        title #{nombrePagina}
    body
        header.barra
            h1 UpTask - Project Manager
            //- h1 ProductManager - Administrador de productos
            a(href="#") Cerrar sesion
        main.contenedor
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/new-project" class="boton") New project
                        span +                        
                .panel.lista-proyectos
                    ul#proyectos.proyectos
                        //- Listamos todos los proyectos de la base de datos -//
                        if(allProjects && allProjects.length > 0)
                            each project in allProjects
                                li 
                                    a(href=`/${project.url}`) #{project.name}
            pre= varDump(allProjects)
            block contenido 
            
