mixin crearProyecto(proyecto = {})

    form.agregar-proyecto(action=`/new-project/${proyecto.id  || ''}`, method="post", class="agregar-proyecto") 
        .campo
            label(for="nombre") Project Name: 
            input(value=proyecto.name type="text" id="name" name="name" placeholder="Your project Name")
        .campo.enviar 
            input(type="submit" value=`${proyecto.name ? 'Update' : 'Save'}` class="boton")